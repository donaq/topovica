{
  "manifest_version": 2,
  "name": "Topovica",
  "version": "0.17",

  "description": "Reimplements the parts of vimperator that I care about",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/topovica-content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["scripts/topovica-bg.js"]
  },
  "permissions": ["find", "bookmarks", "history", "tabs", "sessions"]
}
